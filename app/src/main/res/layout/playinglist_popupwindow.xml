<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/pup_up_layout"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="15dp"
            android:drawableLeft="@drawable/gray_cycle"
            android:id="@+id/play_mode"
            android:gravity="left"
            android:textColor="#000000"
            android:text="列表循环"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:drawableLeft="@drawable/collect"
            android:id="@+id/collect"
            android:layout_marginRight="10dp"
            android:text="收藏"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:drawableLeft="@drawable/delete_small"
            android:layout_marginRight="10dp"
            android:id="@+id/delede_all"
            android:text="删除"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
<ListView
    android:id="@+id/play_list_popup"
    android:layout_width="match_parent"
    android:layout_height="300dp"></ListView>
</LinearLayout>
